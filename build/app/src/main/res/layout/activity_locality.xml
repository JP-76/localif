<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E3133">

    <ImageView
        android:id="@+id/locality_image"
        android:layout_width="330dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_launcher_foreground"
        android:contentDescription="@string/image_preview_text"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/btn_accept_route"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_decline_route"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_button"
        android:contentDescription="Decline Route Button"
        android:drawableTop="@drawable/ic_decline"
        app:layout_constraintEnd_toStartOf="@id/btn_accept_route"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/locality_image"
        tools:ignore="RedundantDescriptionCheck" />

    <Button
        android:id="@+id/btn_accept_route"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_button"
        android:contentDescription="Accept Route Button"
        android:drawableTop="@drawable/ic_accept"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_decline_route"
        app:layout_constraintTop_toBottomOf="@id/locality_image"
        tools:ignore="RedundantDescriptionCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>